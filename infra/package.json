{
  "name": "evo-platform-infrastructure",
  "version": "1.0.0",
  "description": "EVO Platform System Infrastructure",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    
    "synth:dev": "cdk synth --context env=development",
    "synth:prod": "cdk synth --context env=production",
    "synth": "cdk synth",
    "diff:dev": "AWS_PROFILE=default cdk diff --context env=development --profile default",
    "diff:prod": "AWS_PROFILE=EVO_PRODUCTION cdk diff --context env=production --profile EVO_PRODUCTION",
    "diff": "cdk diff"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/node": "20.1.0",
    "aws-cdk": "2.100.0",
    "jest": "^29.4.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "~5.1.3"
  },
  "dependencies": {
    "aws-cdk-lib": "2.100.0",
    "constructs": "^10.0.0",
    "source-map-support": "^0.5.21"
  }
}