{
  "name": "evo-uds-infrastructure",
  "version": "1.0.0",
  "description": "EVO UDS System Infrastructure",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    
    "deploy:dev": "AWS_PROFILE=default cdk deploy --all --context env=development --require-approval never --profile default",
    "deploy:prod": "AWS_PROFILE=EVO_PRODUCTION cdk deploy --all --context env=production --require-approval broadening --profile EVO_PRODUCTION",
    
    "diff:dev": "AWS_PROFILE=default cdk diff --context env=development --profile default",
    "diff:prod": "AWS_PROFILE=EVO_PRODUCTION cdk diff --context env=production --profile EVO_PRODUCTION",
    
    "synth:dev": "cdk synth --context env=development",
    "synth:prod": "cdk synth --context env=production",
    
    "bootstrap:dev": "AWS_PROFILE=default cdk bootstrap --profile default",
    "bootstrap:prod": "AWS_PROFILE=EVO_PRODUCTION cdk bootstrap --profile EVO_PRODUCTION",
    
    "destroy:dev": "AWS_PROFILE=default cdk destroy --all --context env=development --force --profile default",
    "destroy:prod": "AWS_PROFILE=EVO_PRODUCTION cdk destroy --all --context env=production --force --profile EVO_PRODUCTION",
    
    "deploy": "cdk deploy --all --require-approval never",
    "destroy": "cdk destroy --all --force",
    "diff": "cdk diff",
    "synth": "cdk synth",
    "bootstrap": "cdk bootstrap"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/node": "20.1.0",
    "aws-cdk": "2.100.0",
    "jest": "^29.4.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "~5.1.3"
  },
  "dependencies": {
    "aws-cdk-lib": "2.100.0",
    "constructs": "^10.0.0",
    "source-map-support": "^0.5.21"
  }
}