# ===========================================
# EVO Platform - Environment Configuration
# AWS-Only Architecture
# ===========================================

# ===== AWS REGION =====
AWS_REGION=us-east-1
VITE_AWS_REGION=us-east-1

# ===== AWS COGNITO =====
VITE_AWS_USER_POOL_ID=us-east-1_XXXXXXXXX
VITE_AWS_USER_POOL_CLIENT_ID=XXXXXXXXXXXXXXXXXXXXXXXXXX
AWS_USER_POOL_ID=us-east-1_XXXXXXXXX

# ===== AWS API GATEWAY =====
VITE_API_BASE_URL=https://xxxxxxxxxx.execute-api.us-east-1.amazonaws.com/prod

# ===== AWS RDS (PostgreSQL) =====
# Será preenchido automaticamente após: npm run rds:setup
DATABASE_URL=postgresql://postgres:PASSWORD@your-rds-endpoint.us-east-1.rds.amazonaws.com:5432/evouds
AWS_RDS_SECRET_ARN=arn:aws:secretsmanager:us-east-1:ACCOUNT:secret:NAME

# ===== AWS BEDROCK (AI/ML) =====
AWS_BEDROCK_REGION=us-east-1
AWS_BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0

# ===== AWS SES (Email) =====
AWS_SES_REGION=us-east-1
AWS_SES_FROM_EMAIL=evo@udstec.io
AWS_SES_FROM_NAME=EVO Platform
AWS_SES_DOMAIN=udstec.io
# Credenciais específicas para SES (opcional - se não definido, usa credenciais padrão AWS)
AWS_SES_ACCESS_KEY_ID=
AWS_SES_SECRET_ACCESS_KEY=

# ===== AWS S3 (Storage) =====
AWS_S3_BUCKET=evo-platform-storage
AWS_S3_REGION=us-east-1

# ===== AWS CLOUDFRONT =====
VITE_CLOUDFRONT_DOMAIN=xxxxxxxxxx.cloudfront.net

# ===== AWS SECRETS MANAGER =====
AWS_SECRETS_PREFIX=evo-platform/

# ===== REDIS CACHE (Optional) =====
REDIS_URL=redis://localhost:6379

# ===== APPLICATION =====
NODE_ENV=development
LOG_LEVEL=DEBUG
APP_VERSION=  # Auto-set from version.json

# ===== SECURITY =====
VITE_STORAGE_ENCRYPTION_KEY=your-32-character-encryption-key-here
TOKEN_ENCRYPTION_KEY=  # Base64-encoded 32-byte key (generate: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))")

# ===== AZURE OAUTH (Optional) =====
AZURE_OAUTH_CLIENT_ID=
AZURE_OAUTH_CLIENT_SECRET=
AZURE_OAUTH_REDIRECT_URI=https://evo.nuevacore.com/azure/callback

# ===== FEATURE FLAGS =====
VITE_ENABLE_ORG_VALIDATION=false

# ===== REMOVIDOS (NÃO USAR) =====
# VITE_SUPABASE_URL - REMOVIDO
# VITE_SUPABASE_ANON_KEY - REMOVIDO
# SUPABASE_SERVICE_ROLE_KEY - REMOVIDO
# LOVABLE_API_KEY - REMOVIDO
# LOVABLE_AI_KEY - REMOVIDO