# Amazon Nova Act Configuration
# Copie este arquivo para .env e preencha os valores

# ============================================
# NOVA ACT AUTHENTICATION
# ============================================

# API Key (obter em https://nova.amazon.com/act)
NOVA_ACT_API_KEY=your_api_key_here

# Ou usar IAM credentials (deixar API_KEY vazio)
# NOVA_ACT_USE_IAM=true
# AWS_PROFILE=your-profile
# AWS_REGION=us-east-1

# ============================================
# NOVA ACT SETTINGS
# ============================================

# Modelo a usar
NOVA_ACT_MODEL_ID=nova-act-latest

# Timeout em ms (default: 120000 = 2 min)
NOVA_ACT_TIMEOUT=120000

# Máximo de steps por ação (default: 30)
NOVA_ACT_MAX_STEPS=30

# Executar em modo headless (default: true)
NOVA_ACT_HEADLESS=true

# Gravar vídeo das sessões (default: false)
NOVA_ACT_RECORD_VIDEO=false

# Diretório para logs e traces
NOVA_ACT_LOGS_DIR=./reports/traces

# ============================================
# APPLICATION SETTINGS
# ============================================

# URL da aplicação
APP_URL=https://evo.ai.udstec.io

# URL da API
API_URL=https://api-evo.ai.udstec.io

# Ambiente (development, staging, production)
APP_ENV=production

# ============================================
# TEST USER CREDENTIALS
# ============================================

# Usuário de teste (OBRIGATÓRIO)
TEST_USER_EMAIL=seu.email@empresa.com
TEST_USER_PASSWORD=sua_senha_aqui

# Secret MFA (se MFA estiver habilitado)
# TEST_USER_MFA_SECRET=JBSWY3DPEHPK3PXP

# ============================================
# ADMIN USER (opcional)
# ============================================

# ADMIN_USER_EMAIL=admin@empresa.com
# ADMIN_USER_PASSWORD=admin_password

# ============================================
# BROWSER SETTINGS
# ============================================

# User Agent customizado (opcional)
# BROWSER_USER_AGENT=NovaAct/1.0

# Viewport
BROWSER_WIDTH=1920
BROWSER_HEIGHT=1080

# Locale e Timezone
BROWSER_LOCALE=pt-BR
BROWSER_TIMEZONE=America/Sao_Paulo

# ============================================
# RETRY SETTINGS
# ============================================

RETRY_MAX_ATTEMPTS=3
RETRY_DELAY_MS=1000
RETRY_BACKOFF=2

# ============================================
# REPORTING
# ============================================

# Screenshots
SCREENSHOT_ON_FAILURE=true
SCREENSHOT_ON_SUCCESS=false

# Relatório HTML
HTML_REPORT=true

# Upload para S3 (opcional)
# REPORT_S3_BUCKET=my-test-reports-bucket
# REPORT_S3_PREFIX=nova-act-reports/

# ============================================
# DEBUG
# ============================================

# Habilitar logs de debug
# DEBUG=true
