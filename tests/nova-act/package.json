{
  "name": "evo-nova-act-tests",
  "version": "1.0.0",
  "description": "Amazon Nova Act E2E Tests for EVO UDS Platform",
  "type": "module",
  "scripts": {
    "setup": "tsx scripts/setup.ts",
    "test": "tsx run-strict-e2e.ts",
    "test:quick": "tsx run-e2e.ts",
    "test:full": "tsx run-full-e2e.ts",
    "test:strict": "tsx run-strict-e2e.ts",
    "test:vitest": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:report": "vitest run --reporter=html",
    "test:parallel": "vitest run --pool=threads --poolOptions.threads.maxThreads=4",
    "test:auth": "vitest run tests/auth/",
    "test:dashboard": "vitest run tests/dashboard/",
    "test:security": "vitest run tests/security/",
    "test:cost": "vitest run tests/cost/",
    "test:aws": "vitest run tests/aws/",
    "test:e2e": "vitest run tests/e2e/",
    "run:custom": "tsx run-tests.ts",
    "generate:report": "tsx lib/report-generator.ts",
    "lint": "eslint . --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@aws-sdk/client-bedrock-runtime": "^3.958.0",
    "@playwright/test": "^1.57.0",
    "chalk": "^5.3.0",
    "date-fns": "^3.3.1",
    "dotenv": "^16.3.1",
    "ora": "^8.0.1",
    "playwright": "^1.57.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/ui": "^1.2.0",
    "eslint": "^8.56.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
